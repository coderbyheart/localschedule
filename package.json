{
  "name": "@coderbyheart/localschedule",
  "version": "0.0.0-development",
  "description": "Create a shareable schedule with times in your local timezone. Great for remote conferences!",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coderbyheart/localschedule.git"
  },
  "keywords": [
    "Schedule",
    "Timezones",
    "Conferences"
  ],
  "author": "Markus Tacker | https://coderbyheart.com/",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coderbyheart/localschedule/issues"
  },
  "homepage": "https://github.com/coderbyheart/localschedule#readme",
  "scripts": {
    "build": "npx webpack --config-name production",
    "start": "webpack-dev-server --config-name development --open",
    "lint": "eslint --ext .js,.ts,.tsx src/**",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect",
    "postinstall": "check-node-version --package",
    "test": "jest"
  },
  "devDependencies": {
    "@bifravst/code-style": "8.0.134",
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-angular": "12.0.1",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "7.0.7",
    "@svgr/webpack": "5.5.0",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.1",
    "@types/styled-components": "5.1.7",
    "check-node-version": "4.1.0",
    "eslint": "7.20.0",
    "eslint-plugin-react": "7.22.0",
    "fetch-ponyfill": "7.1.0",
    "handlebars": "4.7.7",
    "husky": "5.1.1",
    "jest": "^26.6.3",
    "lint-staged": "10.5.4",
    "localforage": "1.9.0",
    "prettier": "2.2.1",
    "semantic-release": "17.4.0",
    "snyk": "1.461.0",
    "source-map-loader": "2.0.1",
    "ts-jest": "^26.5.2",
    "ts-loader": "8.0.17",
    "typescript": "4.2.2",
    "webpack": "5.24.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "3.11.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ],
    "*.{md,json,yaml,yml,js}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "date-fns": "2.17.0",
    "date-fns-tz": "1.1.4",
    "feather-icons": "^4.28.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "styled-components": "5.2.1"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "snyk": true,
  "jest": {
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".+\\.spec\\.tsx?$",
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}
