{
  "name": "@coderbyheart/localschedule",
  "version": "0.0.0-development",
  "description": "Create a shareable schedule with times in your local timezone. Great for remote conferences!",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "vite build --emptyOutDir",
    "preview": "vite preview",
    "prepare": "husky install",
    "test": "jest --passWithNoTests",
    "test:e2e": "npx tsc -p e2e-tests/tsconfig.json && npx playwright test -c e2e-tests-out",
    "postinstall": "check-node-version --package",
    "lint": "eslint --ext .js,.ts,.tsx src/*.{ts,tsx}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coderbyheart/localschedule.git"
  },
  "author": "Markus Tacker | https://coderbyheart.com/",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coderbyheart/localschedule/issues"
  },
  "homepage": "https://github.com/coderbyheart/localschedule#readme",
  "keywords": [
    "Schedule",
    "Timezones",
    "Conferences"
  ],
  "dependencies": {
    "@nordicsemiconductor/from-env": "1.0.3",
    "ajv": "8.11.2",
    "date-fns-tz": "1.3.7",
    "feather-icons": "4.29.0",
    "ics": "2.41.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.4.4"
  },
  "devDependencies": {
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "11.0.140",
    "@nordicsemiconductor/object-to-env": "4.1.2",
    "@playwright/test": "^1.28.1",
    "@swc/jest": "0.2.23",
    "@testing-library/react": "13.4.0",
    "@types/feather-icons": "4.7.0",
    "@types/jest": "29.2.4",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "@types/sinon": "10.0.13",
    "@vitejs/plugin-react": "2.2.0",
    "check-node-version": "4.2.1",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-no-restricted-imports": "0.0.0",
    "handlebars": "4.7.7",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "sinon": "14.0.2",
    "vite": "3.2.5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --ext .js,.ts,.jsx,.tsx"
    ],
    "e2e-tests/**/*.{ts,tsx}": [
      "eslint --ext .js,.ts,.jsx,.tsx --parser-options tsconfigRootDir:e2e-tests"
    ],
    "*.{md,json,yaml,yml,html}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "prettier": "@nordicsemiconductor/asset-tracker-cloud-code-style/.prettierrc",
  "jest": {
    "testRegex": ".+\\.spec\\.tsx?$",
    "moduleNameMapper": {
      "^.+\\.css$": "identity-obj-proxy",
      "^app/(.*)$": "<rootDir>/src/$1"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e-tests/"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest",
        {
          "sourceMaps": true,
          "jsc": {
            "parser": {
              "syntax": "typescript",
              "tsx": true
            },
            "transform": {
              "react": {
                "runtime": "automatic"
              }
            }
          }
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ],
    "testEnvironment": "jsdom"
  }
}
